  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Article Title</th>
      <th scope="col">Add/Remove to Favorites</th>
    </tr>
  </thead>
  <tbody id="table-body">
    {{#each data}}
    <tr>
      <th scope="row">1</th>
      <td>{{title}}</td>
      <td><button id={{id}} class="fav-button">Add To Favorites</button></td>
    </tr>
    {{/each}}

  </tbody>
</table>


